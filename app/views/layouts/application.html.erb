<!DOCTYPE html>
<html>
  <head>
    <title><%= titre %></title>
    <%= render 'layouts/stylesheets' %>
    <%= csrf_meta_tag %>
    <%= javascript_include_tag :defaults %>
  </head>
  <body>
    <div class="container">
      <% if signed_in? %>
        <%= render 'layouts/header' %>
      <% end %>
      <% flash.each do |key, value| %>
          <%= content_tag(:div, value, :class => "flash #{key}") %>
      <% end %>
        <%= yield %>
      <%= render 'layouts/footer' %>
    </div>
  </body>
</html>
