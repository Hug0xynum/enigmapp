    <h3 class="title"><%= label = @enigma.label%></h3>
  </div>
  <div class="enigma-content">
  <p>
    <%= simple_format(h @enigma.description)%><br>
  </p>
    <form accept-charset="UTF-8" method='post' action='/<%=Theme.where(id: @enigma.theme_id).first.label+"/enigmas/"+@enigma.difficulty.to_s%>'>
       <label for='proposition'>RÃ©ponse: </label>
           <input type="text" name='proposition' class='response' placeholder='Mot de <%= @enigma.right_answer.length%> lettres'> <br>
           <input type="submit" name='submit' class='submission' value='Soumettre'>
   </form>
   <form accept-charset="UTF-8" method='post' action='/<%=Theme.where(id: @enigma.theme_id).first.label+"/enigmas/"+@enigma.difficulty.to_s+"/clue"%>'>
